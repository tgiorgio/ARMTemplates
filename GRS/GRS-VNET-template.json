                        }
                      },
                      {
                        "name": "[variables('Subnet5Name')]",
                        "properties": {
                          "addressPrefix": "[parameters('Subnet5Prefix')]"
                        }
                      },
                      {
                        "name": "[variables('Subnet6Name')]",
                        "properties": {
                          "addressPrefix": "[parameters('Subnet6Prefix')]"
                        }
                      },
                      {
                        "name": "[variables('Subnet7Name')]",
