                        }
                      },
                      {
                        "name": "[variables('Subnet10Name')]",
                        "properties": {
                          "addressPrefix": "[parameters('Subnet10Prefix')]"
                        }
                      }
                ]
            }
        }
        
    ],
    "outputs": {
      "customerprefix":{
        "value": "[parameters('customerprefix')]",
        "type": "string"
