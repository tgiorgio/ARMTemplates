{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
      "customerprefix":{
        "type":"string"
      },
      "vnetResourceGroup":{
        "type": "string"
      },
      "location": {
          "type": "string"
      },
      "VNETaddressPrefix": {
        "type": "string"
      },
      "Subnet1Prefix": {
        "type": "string",
        "defaultValue": "10.0.1.0/24",
        "metadata": {
            "description":"Firewall External"
        }
        },
        "Subnet2Prefix": {
          "type": "string",
          "defaultValue": "10.0.2.0/24",
          "metadata": {
              "description":"Firewall Internal"
          }
        },
        "Subnet3Prefix": {
          "type": "string",
          "defaultValue": "10.0.3.0/24",
          "metadata": {
              "description":"RD Access"
          }
        },
        "Subnet4Prefix": {
          "type": "string",
          "defaultValue": "10.0.4.0/24",
          "metadata": {
            "description": "RD Hosts"
          }
        },
        "Subnet5Prefix": {
          "type": "string",
          "defaultValue": "10.0.5.0/24",
          "metadata": {
            "description": "GRS Data"
          }
        },
        "Subnet6Prefix": {
          "type": "string",
          "defaultValue": "10.0.6.0/24",
          "metadata": {
            "description": "GRS Web"
          }
        },
        "Subnet7Prefix": {
          "type": "string",
          "defaultValue": "10.0.7.0/24",
          "metadata": {
            "description": "Core Network"
          }
        },
        "Subnet8Prefix": {
          "type": "string",
          "defaultValue": "10.0.8.0/24",
          "metadata": {
            "description": "Core DMZ"
          }
        },
        "Subnet9Prefix": {
          "type": "string",
          "defaultValue": "10.0.9.0/24",
          "metadata": {
            "description": "Core Test"
          }
        }
    },
    "variables": {
      "VNETname" : "[concat(parameters('customerprefix'),parameters('location'),'-vnet')]",
      "subnet1Name" : "[concat(parameters('customerprefix'),'-subnet-ExtFG')]",
      "subnet2Name" : "[concat(parameters('customerprefix'),'-subnet-IntFG')]",
      "subnet3Name" : "[concat(parameters('customerprefix'),'-subnet-RDAccess')]",
      "subnet4Name" : "[concat(parameters('customerprefix'),'-subnet-RDHosts')]",
      "subnet5Name" : "[concat(parameters('customerprefix'),'-subnet-GRSData')]",
      "subnet6Name" : "[concat(parameters('customerprefix'),'-subnet-GRSWeb')]",
      "subnet7Name" : "[concat(parameters('customerprefix'),'-subnet-CoreNetwork')]",
      "subnet8Name" : "[concat(parameters('customerprefix'),'-subnet-CoreDMZ')]",
      "subnet9Name" : "[concat(parameters('customerprefix'),'-subnet-CoreTest')]"
    },
    "resources": [
        {
            "apiVersion": "2018-11-01",
            "name": "[variables('VNETname')]",
            "type": "Microsoft.Network/virtualNetworks",
            "location": "[parameters('location')]",
            "properties": {
                "addressSpace": {
                    "addressPrefixes": [
                        "[parameters('VNETaddressPrefix')]"
                    ]
                },
                "subnets": [
                    {
                        "name": "[variables('Subnet1Name')]",
                        "properties": {
                          "addressPrefix": "[parameters('Subnet1Prefix')]"
                        }
                      },
                      {
                        "name": "[variables('Subnet2Name')]",
                        "properties": {
                          "addressPrefix": "[parameters('Subnet2Prefix')]"
                        }
                      },
                      {
                        "name": "[variables('Subnet3Name')]",
                        "properties": {
                          "addressPrefix": "[parameters('Subnet3Prefix')]"
                        }
                      },
                      {
                        "name": "[variables('Subnet4Name')]",
                        "properties": {
                          "addressPrefix": "[parameters('Subnet4Prefix')]"
                        }
                      },
                      {
                        "name": "[variables('Subnet5Name')]",
                        "properties": {
                          "addressPrefix": "[parameters('Subnet5Prefix')]"
                        }
                      },
                      {
                        "name": "[variables('Subnet6Name')]",
                        "properties": {
                          "addressPrefix": "[parameters('Subnet6Prefix')]"
                        }
                      },
                      {
                        "name": "[variables('Subnet7Name')]",
                        "properties": {
                          "addressPrefix": "[parameters('Subnet7Prefix')]"
                        }
                      },
                      {
                        "name": "[variables('Subnet8Name')]",
                        "properties": {
                          "addressPrefix": "[parameters('Subnet8Prefix')]"
                        }
                      },
                      {
                        "name": "[variables('Subnet9Name')]",
                        "properties": {
                          "addressPrefix": "[parameters('Subnet9Prefix')]"
                        }
                      }
                ]
            }
        }
    ],
    "outputs": {
      "customerprefix":{
        "value": "[parameters('customerprefix')]",
        "type": "string"
      },
      "vnetID": {
        "value": "[resourceId(parameters('vnetResourceGroup'),'Microsoft.Network/virtualNetworks', variables('vnetName'))]",
        "type" : "string"
      },
      "vnetAddressPrefix":{
        "value": "[parameters('VNETaddressPrefix')]",
        "type": "string"
      },
      "VNETname":{
        "value": "[variables('VNETname')]",
        "type": "string"
      },
      "subnet1Name": {
        "value" : "[concat(resourceId(parameters('vnetResourceGroup'),'Microsoft.Network/virtualNetworks', variables('vnetName')),'/subnets/', variables('Subnet1Name'))]",
        "type" : "string"
      },
      "Subnet1Prefix": {
        "value": "[parameters('Subnet1Prefix')]",
        "type": "string"
      },
      "subnet2Name": {
        "value" : "[concat(resourceId(parameters('vnetResourceGroup'),'Microsoft.Network/virtualNetworks', variables('vnetName')),'/subnets/', variables('Subnet2Name'))]",
        "type" : "string"
      },
      "Subnet2Prefix": {
        "value": "[parameters('Subnet2Prefix')]",
        "type": "string"
      },
      "subnet3Name": {
        "value" : "[concat(resourceId(parameters('vnetResourceGroup'),'Microsoft.Network/virtualNetworks', variables('vnetName')),'/subnets/', variables('Subnet3Name'))]",
        "type" : "string"
      },
      "Subnet3Prefix": {
        "value": "[parameters('Subnet3Prefix')]",
        "type": "string"
      },
      "subnet4Name": {
        "value" : "[concat(resourceId(parameters('vnetResourceGroup'),'Microsoft.Network/virtualNetworks', variables('vnetName')),'/subnets/', variables('Subnet4Name'))]",
        "type" : "string"
      },
      "Subnet4Prefix": {
        "value": "[parameters('Subnet4Prefix')]",
        "type": "string"
      },
      "subnet5Name": {
        "value" : "[concat(resourceId(parameters('vnetResourceGroup'),'Microsoft.Network/virtualNetworks', variables('vnetName')),'/subnets/', variables('Subnet5Name'))]",
        "type" : "string"
      },
      "Subnet5Prefix": {
        "value": "[parameters('Subnet5Prefix')]",
        "type": "string"
      },
      "subnet6Name": {
        "value" : "[concat(resourceId(parameters('vnetResourceGroup'),'Microsoft.Network/virtualNetworks', variables('vnetName')),'/subnets/', variables('Subnet6Name'))]",
        "type" : "string"
      },
      "Subnet6Prefix": {
        "value": "[parameters('Subnet6Prefix')]",
        "type": "string"
      },
      "subnet7Name": {
        "value" : "[concat(resourceId(parameters('vnetResourceGroup'),'Microsoft.Network/virtualNetworks', variables('vnetName')),'/subnets/', variables('Subnet7Name'))]",
        "type" : "string"
      },
      "Subnet7Prefix": {
        "value": "[parameters('Subnet7Prefix')]",
        "type": "string"
      },
      "subnet8Name": {
        "value" : "[concat(resourceId(parameters('vnetResourceGroup'),'Microsoft.Network/virtualNetworks', variables('vnetName')),'/subnets/', variables('Subnet8Name'))]",
        "type" : "string"
      },
      "Subnet8Prefix": {
        "value": "[parameters('Subnet8Prefix')]",
        "type": "string"
      },
      "subnet9Name": {
        "value" : "[concat(resourceId(parameters('vnetResourceGroup'),'Microsoft.Network/virtualNetworks', variables('vnetName')),'/subnets/', variables('Subnet9Name'))]",
        "type" : "string"
      },
      "Subnet9Prefix": {
        "value": "[parameters('Subnet9Prefix')]",
        "type": "string"
      }
    }
}