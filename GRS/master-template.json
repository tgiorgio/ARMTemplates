{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {},
    "variables": {},
    "resources": [
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2018-05-01",
            "name": "GRSDeployVNET",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri":"https://github.com/tgiorgio/ARMTemplates/blob/master/GRS/GRS-VNET-template.json"
                    
                },
                "parametersLink": {
                    "uri":"https://mystorageaccount.blob.core.windows.net/AzureTemplates/newStorageAccount.parameters.json"
                    
                }
            }
          },    
          {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2018-05-01",
            "name": "GRSDeployFortigate",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri":"https://github.com/tgiorgio/ARMTemplates/blob/master/GRS/GRS-Fortigate-Template.json"
                    
                },
                "parameters": {
                    "FortiGateImageSKU" :{
                        "Value" : ""
                    },
                    "instanceType" :{
                        "Value" : ""
                    },
                    "vnetResourceGroup": {
                        "Value": ""
                      },
                      "vnetAddressPrefix": {
                        "Value": "10.0.0.0/16"
                      },
                      "Subnet1Name": {
                        "Value": "EntrySubnet"
                      },
                      "Subnet1Prefix": {
                        "Value": "10.0.1.0/24"
                      },
                      "Subnet2Name": {
                        "Value": "TransitSubnet"
                      },
                      "Subnet2Prefix": {
                        "Value": "10.0.2.0/24"
                      },
                      "Subnet3Name": {
                        "Value": "ProtectedSubnet"
                      },
                      "Subnet3Prefix": {
                        "Value": "10.0.3.0/24"
                      }
                    
                }
            }
          }
    ],
    "outputs": {
        "vnetID":{
            "type": "string",
            "value": "[reference('GRSDeployVNET').outputs.vnetID.value]"
        }
    }
}